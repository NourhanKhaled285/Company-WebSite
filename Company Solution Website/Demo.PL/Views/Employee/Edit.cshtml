@model EmployeeViewModel
@{
    ViewData["Title"] = "Edit";

    var Departments = new SelectList(ViewBag.Departments, "Id", "Name");
}

<h1>Update Employee</h1>
<br />
<br />

<div class="row">
    <div class="col-6">
        <form asp-action="Edit" asp-controller="Employee">
            <input hidden asp-for="Id" />
             <partial name="PartialViews/CreateEditPartialView" model="@Model"/>

            <br />
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-light">Back To List</a>
        </form>
    </div>
</div>

@section Scripts {

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>


}



