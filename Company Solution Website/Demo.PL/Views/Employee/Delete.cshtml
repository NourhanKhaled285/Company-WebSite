@model EmployeeViewModel
@{
    ViewData["Title"] = "Delete";

}

<h1>Delete Employee</h1>
<br />
<br />
<h3>Are You Sure to Delete this Employee</h3>
<div class="row">
    <div class="col-6">
        <form asp-action="Delete" asp-controller="Employee">
            <input hidden asp-for="Id" />
            <partial name="PartialViews/DetailsDeletePartialView" model="@Model" />

            <br />

            <input type="submit" class="btn btn-danger" value="Delete" /> |
            <a class="btn btn-light" asp-action="Index">Back To List</a>
        </form>
    </div>

</div>





